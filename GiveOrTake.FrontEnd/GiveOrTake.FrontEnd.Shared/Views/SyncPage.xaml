<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GiveOrTake.FrontEnd.Shared.Views.SyncPage"
			 xmlns:controls="clr-namespace:GiveOrTake.FrontEnd.Shared.Views"
			 xmlns:vm="clr-namespace:GiveOrTake.FrontEnd.Shared.ViewModels"
			 Title="Sync">
	<ContentPage.BindingContext>
		<vm:SyncPageViewModel />
	</ContentPage.BindingContext>
	<ContentPage.Content>
		<StackLayout>
			<Button Text="Sync Data with Server"
					Command="{Binding SyncDataCommand}"/>
			<controls:LoadingView Message="{Binding BusyMessage}"
								  IsVisible="{Binding IsBusy}"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>